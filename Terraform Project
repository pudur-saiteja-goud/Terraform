pipeline {
    agent any

    stages {
        stage('code') {
            steps {
                git branch: 'main', url: 'https://github.com/pudur-saiteja-goud/devops18.git'
            }
        }
        stage('init1') {
           steps{
                script {
                    sh 'echo -e "yes\n" | terraform init'
                }
                
            }
                

        }
        stage('init') {
            steps {
                
                sh 'terraform plan'
                sh 'terraform apply --auto-approve'
            }
            
        }
        stage('deployment') {
            steps {
                sh "ansible-playbook -i /opt/ansible/inventory/aws_ec2.yml /var/lib/jenkins/workspace/mydeployment/ansible/deployment.yml"

            }
        }
    }
}
